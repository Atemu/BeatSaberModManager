<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BeatSaberModManager.ViewModels"
        xmlns:cv="clr-namespace:BeatSaberModManager.Views.Converters"
        xmlns:c="clr-namespace:BeatSaberModManager.Views.Controls"
        xmlns:p="clr-namespace:BeatSaberModManager.Views.Pages"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BeatSaberModManager.Views.Windows.MainWindow"
        x:CompileBindings="True"
        x:DataType="vm:MainWindowViewModel"
        Name="Window"
        Title="{StaticResource MainWindow:Title}"
        Icon="/Resources/Icons/Icon.ico"
        TransparencyLevelHint="Blur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        MinWidth="820" MinHeight="350"
        Width="1100" Height="600">

    <Window.Resources>
        <cv:LocalizedStatusConverter x:Key="LocalizedStatusConverter" />
    </Window.Resources>

    <TabControl x:Name="TabControl" TabStripPlacement="Left" Classes="SideBar" Margin="{Binding #Window.OffScreenMargin}">
        <TabItem>
            <p:IntroPage />
            <TabItem.Header>
                <StackPanel Orientation="Vertical">
                    <PathIcon Data="{StaticResource Icons:Info}" Foreground="{DynamicResource InfoIconBrush}" />
                    <Label HorizontalAlignment="Center" Content="{DynamicResource MainWindow:IntroHeader}" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>
        <TabItem Content="{Binding ModsViewModel}">
            <TabItem.Header>
                <StackPanel Orientation="Vertical">
                    <PathIcon Data="{StaticResource Icons:Library}" Foreground="{DynamicResource DatabaseIconBrush}" />
                    <Label HorizontalAlignment="Center" Content="{DynamicResource MainWindow:ModsHeader}" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>
        <TabItem Content="{Binding SettingsViewModel}">
            <TabItem.Header>
                <StackPanel Orientation="Vertical">
                    <PathIcon Data="{StaticResource Icons:Settings}" Foreground="{DynamicResource GearIconBrush}" />
                    <Label HorizontalAlignment="Center" Content="{DynamicResource MainWindow:SettingsHeader}" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>

        <TabControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Vertical" Margin="0, 30, 0, 0" />
            </ItemsPanelTemplate>
        </TabControl.ItemsPanel>

        <TabControl.Tag>
            <Grid Height="30"
                  ColumnDefinitions="*, Auto, Auto"
                  Margin="0, 5">
                <ProgressBar Grid.Column="0"
                             Margin="10, 0, 5, 0"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             Value="{Binding ProgressValue}">
                </ProgressBar>
                <Viewbox Grid.Column="0" ZIndex="1" ClipToBounds="True">
                    <Label Margin="10, 0, 5, 0"
                           Content="{Binding ProgressInfo, Converter={StaticResource LocalizedStatusConverter}}" />
                </Viewbox>
                <c:HyperlinkButton Grid.Column="1"
                                   Margin="5, 0, 5, 0"
                                   Content="{DynamicResource MainWindow:MoreInfoButton}"
                                   Uri="{Binding ModsViewModel.SelectedGridItem.AvailableMod.MoreInfoLink}"
                                   IsEnabled="{Binding MoreInfoButtonEnabled}">
                </c:HyperlinkButton>
                <Button Grid.Column="2"
                        Margin="5, 0, 10, 0"
                        Content="{DynamicResource MainWindow:RefreshModsButton}"
                        IsEnabled="{Binding InstallButtonEnabled}"
                        Command="{Binding InstallButtonCommand}">
                </Button>
            </Grid>
        </TabControl.Tag>
    </TabControl>

</Window>