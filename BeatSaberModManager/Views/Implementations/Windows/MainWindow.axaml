<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BeatSaberModManager.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BeatSaberModManager.Views.Implementations.Windows.MainWindow"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        Width="1080"
        Height="580">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="*, 8.75*" RowDefinitions="*, Auto">
        <Rectangle Grid.Column="0"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   IsHitTestVisible="False"
                   Opacity="0.85"
                   Fill="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
        <Rectangle Grid.Column="1"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   IsHitTestVisible="False" 
                   Opacity="0.95"
                   Fill="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />

        <ListBox Grid.Column="0"
                 Grid.Row="0"
                 Margin="0, 30"
                 Background="{x:Null}"
                 BorderBrush="{x:Null}"
                 SelectedIndex="{Binding SelectedIndex}">
            <ListBox.Items>
                <ListBoxItem Content="{DynamicResource MainWindow:IntroHeader}" />
                <ListBoxItem Content="{DynamicResource MainWindow:ModsHeader}" />
                <ListBoxItem Content="{DynamicResource MainWindow:OptionsHeader}" />
            </ListBox.Items>
        </ListBox>

        <TabControl Grid.Column="1"
                    Grid.Row="0"
                    Classes="SideBar"
                    SelectedIndex="{Binding SelectedIndex}">
            <TabItem x:Name="IntroViewTabItem" />
            <TabItem x:Name="ModsViewTabItem" />
            <TabItem x:Name="OptionsViewTabItem" />
        </TabControl>

        <Grid Grid.Column="1"
              Grid.Row="1"
              ColumnDefinitions="*, Auto, Auto"
              Margin="0, 5">
            <ProgressBar Grid.Column="0"
                         Margin="10, 0, 5, 0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Value="{Binding ProgressBarValue}" />
            <StackPanel Grid.Column="0"
                        ZIndex="1"
                        Margin="10, 0, 5, 0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Label Name="ProgressBarStatusText"
                       FontSize="22" />
                <Label FontSize="22"
                       Content="{Binding ProgressBarText}" />
            </StackPanel>
            <Button Grid.Column="1"
                    Margin="5, 0, 5, 0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="{DynamicResource MainWindow:MoreInfoButton}"
                    IsEnabled="{Binding MoreInfoButtonEnabled}"
                    Command="{Binding MoreInfoButtonCommand}" />
            <Button Grid.Column="2"
                    Margin="5, 0, 10, 0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="{DynamicResource MainWindow:RefreshModsButton}"
                    IsEnabled="{Binding InstallButtonEnabled}"
                    Command="{Binding InstallButtonCommand}" />
        </Grid>
    </Grid>

</Window>