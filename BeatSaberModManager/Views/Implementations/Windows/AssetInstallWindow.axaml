<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BeatSaberModManager.ViewModels"
        xmlns:c="clr-namespace:BeatSaberModManager.Views.Implementations.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BeatSaberModManager.Views.Implementations.Windows.AssetInstallWindow"
        x:CompileBindings="True"
        x:DataType="vm:AssetInstallWindowViewModel"
        x:Name="Window"
        Title="OneClick™ Installer"
        Icon="/Resources/Icons/Icon.ico"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        Width="300"
        Height="500">

    <Panel Margin="{Binding #Window.OffScreenMargin}">
        <Grid RowDefinitions="2.75*, *">
            <Rectangle Grid.Row="0"
                       IsHitTestVisible="False"
                       Fill="{DynamicResource BackgroundMediumLowBrush}">
            </Rectangle>
            <Rectangle Grid.Row="1"
                       IsHitTestVisible="False"
                       Fill="{DynamicResource BackgroundMediumBrush}">
            </Rectangle>

            <Viewbox Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Panel>
                    <c:ProgressRing Width="200"
                                    Height="200"
                                    Margin="50"
                                    Value="{Binding ProgressValue}"
                                    IsVisible="{Binding IsExecuting}">
                    </c:ProgressRing>
                    <Path Stroke="DarkGreen"
                          StrokeThickness="1"
                          Fill="Green"
                          Data="{StaticResource Icons:Checkmark}"
                          IsVisible="{Binding IsSuccess}">
                    </Path>
                    <Path Stroke="DarkRed"
                          StrokeThickness="1"
                          Fill="Red"
                          Data="{StaticResource Icons:Cross}"
                          IsVisible="{Binding IsFailed}">
                    </Path>
                </Panel>
            </Viewbox>

            <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ItemsRepeater Items="{Binding Log}" />
            </ScrollViewer>
        </Grid>
    </Panel>

</Window>